<table class="table table-striped table-condensed">
  <tr>
    <th>Ano</th>
    <th>Data Abertura</th>
    <th>UF</th>
    <th>Atendida?</th>
    <th>Assunto</th>
    <th>Problema</th>
  </tr>
  <% @reclamacoes.each do |r| %>
    <tr class=<%= r.atendida? ? "success" : "error" %>>
      <td><%= r.ano %></td>
      <td><%= r.data_abertura.to_date %></td>
      <td><%= r.uf %></td>
      <td><%= r.atendida %></td>
      <td><%= r.assunto %></td>
      <td><%= r.problema %></td>
    </tr>
  <% end %>
</table>
